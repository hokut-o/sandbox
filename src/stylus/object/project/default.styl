section
	position: relative;
nav
	position: fixed
	top: 0
	width: 100%
	background-color: #096375
	z-index: 2
ul
	display: flex
	height: 50px
	align-items: center
	padding-left: 30px
li
	font-size: 1.4rem
	list-style none
	&:nth-child(n+2)
		margin-left: 30px
a
	height: 50px
	display: flex
	align-items: center
	color: #fff
	text-decoration: none
	&:hover
		text-decoration: underline
h1
	position sticky
	top: 50px
	font-size: 2.8rem
	z-index: 1
	background-color: #fff
	color: #272727
p
	margin-top: 1rem
	font-size: 1.4rem
	color: #272727
section
	padding-top: 50px
	padding-left: 30px
	padding-right: 30px
