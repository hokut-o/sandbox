.faq
	&__wrap
		max-width: 1000px
		width: 95%
		margin: 0 auto
		padding: 4em 0 3em
		&:first-of-type
			padding: 0 0 3em
	&__category
		font-size: 3em
		font-weight: normal
		margin-bottom: 1.6em
		color: #272727
	&__block
		font-size: 14px
		margin-bottom: 2em
		border: 2px solid #4A2881
		border-radius: 5px
		background: #fff
	&__question
		color: #272727
		padding: 2em 4em 2em 2em
		line-height: 1.6
		position: relative
		cursor pointer
		&__icon
			transition all .2s ease-out
			position: absolute
			top: 50%
			margin-top: -7px
			right: 2em
			&:before
				color: #272727
				font-size: 14px
				line-height: 1
		&.is-active
			.faq__question__icon
				transform rotate(180deg)
	&__answer
		padding: 0 2em 2em
		color: #272727
		display: none
	&__input
		border-radius: 3px
		border: solid 1px #4A2881
		width: 100%
		height: 40px
		font-size: 1.4rem
		display: flex
		justify-content: center
		align-items: center
		padding-left: 10px
		placeholderColor(#ccc, 1.4rem)
		&__wrap
			display: flex
			max-width: 1000px
			width: 95%
			margin: 0 auto
			padding: 4em 0 2em
	&__search
		&__result
			max-width: 1000px
			width: 95%
			margin: 0 auto
			font-size: 14px
			color: #272727
			&__body
				margin-top: 20px